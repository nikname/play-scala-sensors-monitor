# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Temperature
POST    /temperatures/add           @controllers.TemperatureController.add
GET     /temperatures               @controllers.TemperatureController.findAll
GET     /temperatures/:id           @controllers.TemperatureController.find(id: String)
DELETE  /temperatures/:id           @controllers.TemperatureController.remove(id: String)
